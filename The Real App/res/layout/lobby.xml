<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background = "@color/black" xmlns:app=":http://schemas.android.com/apk/res/android">

    <TextView
        android:id="@+id/lobbyWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/lobbyWelcome"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/lobbyDirections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lobbyWelcome"
        android:layout_centerHorizontal="true"
        android:text="@string/lobbyDirections"
        android:textColor="@color/white"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/playerListLobbyLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lobbyDirections"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="26dp"
        android:text="@string/playerList"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/playerListLobby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/lobbyWelcome"
        android:layout_alignRight="@+id/lobbyWelcome"
        android:layout_below="@+id/playerListLobbyLabel"
        android:layout_marginTop="18dp"
        android:textColor="@color/white"
        android:maxLines="6"
        android:lines = "6"/>

    <ProgressBar
        android:id="@+id/progressBar1"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/playerListLobby"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:visibility="invisible" />
    
</RelativeLayout>