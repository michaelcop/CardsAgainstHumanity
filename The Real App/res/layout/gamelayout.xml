<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:baselineAligned="false"
    android:showDividers="none" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0"
        android:orientation="vertical" >

        <Button
            android:id="@+id/card1"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Card1"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/card2"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Card2"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/card3"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Card3"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/card4"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Card4"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/card5"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Card5"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/card6"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="@string/Card6"
            android:textColor="@color/White" />

        <Button
            android:id="@+id/card7"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:text="@string/Card7"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="@string/see_card"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="0.30"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/blackcard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="200dp"
            android:text="@string/black_card"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Text"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/White" />

    </LinearLayout>

</LinearLayout>