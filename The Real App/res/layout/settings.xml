<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black" >

    <View
        android:id="@+id/view1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/textView2"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/LogOutButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/SaveButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp"
        android:text="@string/setting_switch"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/DefaultRoundsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/view1"
        android:text="@string/defaultRounds"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/settingRoundsSpinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/DefaultRoundsText"
        android:layout_alignRight="@+id/DefaultRoundsText"
        android:layout_below="@+id/DefaultRoundsText" />

    <Button
        android:id="@+id/ReturnToMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/toggleNotificationsButton"
        android:layout_below="@+id/LogOutButton"
        android:layout_marginRight="31dp"
        android:text="@string/returntomenu"
        android:textColor="@color/White" />

    <Button
        android:id="@+id/SaveButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/toggleNotificationsButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="37dp"
        android:layout_marginLeft="49dp"
        android:clickable="false"
        android:text="@string/setting_save"
        android:textColor="@color/White" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/setting_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/White"
        android:textStyle="bold" />

    <ToggleButton
        android:id="@+id/toggleNotificationsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settingRoundsSpinner"
        android:layout_centerHorizontal="true"
        android:textColor="@color/White"
        android:visibility="invisible" />

</RelativeLayout>