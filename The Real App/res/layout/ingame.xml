<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/DarkGray"
        android:editable="false"
        android:ems="10"
        android:hint="@string/hint"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/chatBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageInput"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/messageInput"
        android:background="@color/SteelBlue"
        android:lines="6"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:text="@string/test"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/messageInput"
        android:text="@string/settings" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings"
        android:layout_alignLeft="@+id/settings"
        android:layout_alignParentRight="true"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/playerPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/chatBox"
        android:background="@color/Gray"
        android:text="@string/points"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <!-- CARDS PLEASE -->

    <TextView
        android:id="@+id/c1"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_above="@+id/chatBox"
        android:layout_toLeftOf="@+id/c3"
        android:background="@drawable/white"
        android:hint="@string/defaultCard"
        android:lines="4"
        android:maxLines="4"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/card1" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/c4"
        android:layout_toLeftOf="@+id/c3"
        android:background="@drawable/white"
        android:hint="@string/defaultCard"
        android:lines="4"
        android:maxHeight="45dp"
        android:maxLines="4"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/cardtext"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/blackcard"
        android:layout_width="150dp"
        android:layout_height="235dp"
        android:layout_above="@+id/c1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft = "10dp"
        android:layout_toLeftOf="@+id/playerList"
        android:background="@drawable/rectangle"
        android:hint="@string/defaultCard"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/blackText"
        android:textColor="@color/white" />

    <!--  -->

    <Button
        android:id="@+id/sendMessage"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/messageInput"
        android:layout_toLeftOf="@+id/settings"
        android:layout_toRightOf="@+id/blackcard"
        android:text="Send"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/playerList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/listLabel"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/listLabel"
        android:layout_marginRight="10dp"
        android:background="@color/SteelBlue"
        android:lines="7"
        android:maxLines="7"
        android:text="TextView" />

    <TextView
        android:id="@+id/c5"
        android:layout_width="100dp"
        android:layout_height="160dp"
        android:layout_above="@+id/playerPoints"
        android:layout_alignRight="@+id/playerList"
        android:background="@drawable/white"
        android:hint="@string/defaultCard"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/card5" />

    <TextView
        android:id="@+id/c6"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_alignLeft="@+id/c5"
        android:layout_below="@+id/blackcard"
        android:background="@drawable/white"
        android:hint="@string/defaultCard"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/card6" />

    <TextView
        android:id="@+id/c7"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_above="@+id/playerPoints"
        android:layout_alignLeft="@+id/c5"
        android:background="@drawable/white"
        android:hint="@string/defaultCard"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/card7" />

    <TextView
        android:id="@+id/c3"
        android:layout_width="100dp"
        android:layout_height="110dp"
        android:layout_above="@+id/chatBox"
        android:layout_centerHorizontal="true"
        android:background="@drawable/white"
        android:hint="@string/defaultCard"
        android:lines="4"
        android:maxLines="4"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/card3" />

    <TextView
        android:id="@+id/c4"
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_alignBottom="@+id/c1"
        android:layout_toRightOf="@+id/c1"
        android:background="@drawable/white"
        android:hint="@string/defaultCard"
        android:paddingLeft="8dp"
        android:paddingTop="5dp"
        android:scrollbars="vertical"
        android:text="@string/card4" />

    <TextView
        android:id="@+id/listLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/c3"
        android:text="@string/playerList"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white" />

</RelativeLayout>