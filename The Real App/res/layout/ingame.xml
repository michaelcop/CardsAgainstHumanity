<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:orientation="vertical" >

    <EditText
        android:id="@+id/messageInput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@color/DarkGray"
        android:ems="10"
        android:hint="@string/hint"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/chatBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/messageInput"
        android:layout_alignParentLeft="true"
        android:layout_alignRight="@+id/messageInput"
        android:background="@color/SteelBlue"
        android:lines="6"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:text="@string/test"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/settings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/messageInput"
        android:text="@string/settings" />

    <Button
        android:id="@+id/submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/settings"
        android:layout_alignLeft="@+id/settings"
        android:layout_alignParentRight="true"
        android:text="@string/submit" />

    <TextView
        android:id="@+id/playerPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/submit"
        android:layout_alignLeft="@+id/submit"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/chatBox"
        android:background="@color/Gray"
        android:text="@string/points"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/black" />

    <!-- CARDS PLEASE -->

    <TextView
        android:id="@+id/playerlist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="9dp"
        android:layout_marginTop="26dp"
        android:background="@color/SteelBlue"
        android:lines="7"
        android:maxLines="7"
        android:text="TextView"
        android:width="140dp" />

        <TextView
            android:id="@+id/c1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/chatBox"
            android:layout_toLeftOf="@+id/c3"
            android:background="@drawable/white"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/card1" />

         <TextView
            android:id="@+id/c2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/c4"
            android:layout_toLeftOf="@+id/c3"
            android:background="@drawable/white"
            android:maxHeight="45dp"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/cardtext"
            android:textSize="10dp" />
         
        <TextView
            android:id="@+id/c3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/chatBox"
            android:layout_toLeftOf="@+id/playerPoints"
            android:background="@drawable/white"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/card3" />

        <TextView
            android:id="@+id/c4"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/c1"
            android:layout_toRightOf="@+id/c1"
            android:background="@drawable/white"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/card4" />

        <TextView
            android:id="@+id/c5"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_above="@+id/playerPoints"
            android:layout_alignLeft="@+id/playerPoints"
            android:background="@drawable/white"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/card5" />

        <TextView
            android:id="@+id/c6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/playerPoints"
            android:layout_alignLeft="@+id/playerPoints"
            android:background="@drawable/white"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/card6" />

        <TextView
            android:id="@+id/c7"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_above="@+id/playerPoints"
            android:layout_alignLeft="@+id/playerPoints"
            android:background="@drawable/white"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/card7" />

        <TextView
            android:id="@+id/blackcard"
            android:layout_width="150dp"
            android:layout_height="225dp"
            android:layout_above="@+id/c1"
            android:layout_marginBottom="10dp"
            android:layout_alignLeft="@+id/c1"
            android:background="@drawable/rectangle"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            android:text="@string/card1"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/playerList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/blackcard"
            android:layout_alignBottom="@+id/blackcard"
            android:layout_alignLeft="@+id/playerlist"
            android:text="@string/playerList"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />

</RelativeLayout>